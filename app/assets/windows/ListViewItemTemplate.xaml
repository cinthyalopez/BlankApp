<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <DataTemplate x:Key="defaultItemTemplate">
        <Grid Height="260" Margin="0,0,0,0" HorizontalAlignment="Stretch">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="336" />
                <ColumnDefinition Width="312" />
                <ColumnDefinition Width="188" />
                <ColumnDefinition Width="164" />
                <ColumnDefinition Width="252" />
                <ColumnDefinition Width="52" />
                <ColumnDefinition Width="52" />
                <ColumnDefinition Width="68" />
            </Grid.ColumnDefinitions>
            <Border Grid.Row="0" Grid.Column="0" Background="#9bcbeb" Height="60" Width="310" VerticalAlignment="Top">
                <TextBlock Text="{Binding Title}" Height="60" Width="310" VerticalAlignment="Top" />
            </Border>
            <Border Grid.Row="0" Grid.Column="1" Background="#ff0000" Height="60" Width="292" VerticalAlignment="Top">
                <TextBlock Text="{Binding Subtitle}" Height="60" Width="292" VerticalAlignment="Top" />
            </Border>
            <Border Grid.Row="0" Grid.Column="2" Background="#00ff00" Height="30" Width="168" VerticalAlignment="Top">
                <TextBlock Text="{Binding Description}" Height="30" Width="168" VerticalAlignment="Top" />
            </Border>
            <Border Grid.Row="0" Grid.Column="3" Background="#0000ff" Height="30" Width="140" VerticalAlignment="Top">
                <TextBlock Text="{Binding Data0}" Height="30" Width="140" VerticalAlignment="Top" />
            </Border>
            <Border Grid.Row="0" Grid.Column="4" Background="#9bcbeb" Height="35" Width="234" CornerRadius="16" VerticalAlignment="Top">
                <TextBlock Text="{Binding Data1}" Height="Auto" Width="Auto" FontSize="18" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#ffffff" />
            </Border>
            <Border Grid.Row="0" Grid.Column="5" Background="#9bcbeb" Height="Auto" Width="Auto">
                <Image Source="{Binding Image}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="6" Background="#9bcbeb" Height="Auto" Width="Auto">
                <Image Source="{Binding Data6}" />
            </Border>
            <Border Grid.Row="0" Grid.Column="7" Background="#9bcbeb" Height="Auto" Width="Auto">
                <Image Source="{Binding Data7}" />
            </Border>
            <TextBlock Grid.Row="1" Grid.Column="0" Text="{Binding Data2}" Margin="16,0,0,0" />
            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding Data3}" Margin="16,0,0,0" />
            <TextBlock Grid.Row="1" Grid.Column="2" Grid.ColumnSpan="2" Text="{Binding Data5}" Margin="16,0,0,0" />
            <Border Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="8" BorderBrush="white" BorderThickness="0,0,0,1" Height="1" />
        </Grid>
    </DataTemplate>

